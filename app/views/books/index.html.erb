
<p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  
 <tbody>
   
   
   
   
   
   
   

<% @books.each do |book| %>
   
 　　　<tr>
       
        <td><%= link_to book.title, root_path(book.id) %></td>
        <td><%= link_to book.body, root_path(book.id) %></td>
        <td>
        <%= link_to "show",  book_path(book.id) %>  
        </td>
        <td>
        <%= link_to "edit", edit_book_path(book.id) %>  
        </td>
        <td>
        <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %> 
      
        </td>
      </tr>

  
  
  
       
  
  
<% end %>

</tbody>
</table>

        
  
  
<h2>New book</h2>


  
  
<%= form_with model: Book.new do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>
<% end %>
